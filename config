### big ulti launchers ###

# Press $mod+o followed by either f, t, Esc or Return to launch firefox,
# thunderbird or return to the default mode, respectively.

set $mode_launcher Launcher
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec firefox; mode "default"
    bindsym l exec lxappearance; mode "default"
    bindsym a exec arandr; mode "default"
    bindsym t exec thunar; mode "default"
    #bindsym v exec virt-manager; mode "default"
    #bindsym c exec cherrytree; mode "default" ##
    bindsym s exec spotify; mode "default"
    #bindsym d exec deepin-screenshot; mode "default"
    #bindsym m exec android-file-transfer; mode "default"
    bindsym q exec qbittorrent; mode "default"


    bindsym Escape mode "default"
    bindsym Return mode "default"
}


set $mode_Power PowerModes: (H)ibernate, (S)uspend, (P)oweroff, (R)eboot, (E)xit
bindsym $mod+p mode "$mode_Power"

mode "$mode_Power" {

    bindsym h exec systemctl hibernate
    bindsym s exec systemctl suspend
    bindsym p exec systemctl poweroff
    bindsym r exec systemctl reboot
    bindsym e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}




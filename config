# Music control
# Special music mode
set $music Music (n) next, (b) prev, (p) play/pause
mode "$music" {
  bindsym n exec playerctl next            #--no-startup-id cmus-remote --next && pkill --signal SIGRTMIN+13 i3blocks, mode "default"
  bindsym b exec playerctl next            # --no-startup-id cmus-remote --prev && pkill --signal SIGRTMIN+13 i3blocks, mode "default"
  bindsym p exec playerctl play-pause           # --no-startup-id cmus-remote --pause && pkill --signal SIGRTMIN+13 i3blocks, mode "default"

# back to normal
  bindsym Return mode "default"
  bindsym Escape mode "default"

}
# Emergency start cmus
#bindsym $mod+Shift+Tab exec screen -S cmus -d -m cmus && pkill --signal SIGRTMIN+13 i3blocks
bindsym $mod+Tab mode "$music"
